[module/gpu-nvidia]
type = custom/script
exec = nvidia-smi --query-gpu=utilization.gpu --format=csv,noheader,nounits | awk '{ print "GPU-Nvidia",""$1"","%"}'
format-underline = #2fbc33
interval = 10

[module/gpu-intel]
type = custom/script
exec = /home/hamath/.config/polybar/custom/system-gpu-intel.sh
interval = 20
format-underline = #3793fc
